#!/usr/bin/env ruby
#
# This file was generated by RubyGems.
#
# The application 'asset_packager' is installed as part of a gem, and
# this file is here to facilitate running it. 
#

require 'rubygems'

begin
    ap_dir = File.join(File.dirname(__FILE__), "../lib")
    raise LoadError unless File.exists?(ap_dir) && File.exists?(File.join(ap_dir, 'asset_packer'))
	
	puts "Using local asset_packager package"
    $:.unshift(ap_dir)
    load 'asset_packer'
rescue LoadError
	version = "> 0"
	if ARGV.first =~ /^_(.*)_$/ and Gem::Version.correct? $1 then
	  version = $1
	  ARGV.shift
	end
	gem 'asset_packager', version
	load 'asset_packer'
end
